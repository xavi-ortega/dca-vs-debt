{
  "name": "dca-vs-debt",
  "version": "1.0.0",
  "private": true,
  "description": "Simulate and compare asset-backed debt strategies and DCA with realistic costs, fees, and long-term risk constraints.",
  "main": "index.js",
  "homepage": "https://dca-vs-debt.vercel.app/",
  "repository": {
    "type": "git",
    "url": "https://github.com/xavi-ortega/dca-vs-debt.git"
  },
  "bugs": {
    "url": "https://github.com/xavi-ortega/dca-vs-debt/issues"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "keywords": [
    "dca",
    "debt",
    "backtesting",
    "asset",
    "leverage",
    "collateralized-loans",
    "lending",
    "financial-simulation"
  ],
  "workspaces": [
    "packages/core",
    "packages/cli",
    "packages/web"
  ],
  "scripts": {
    "build": "npm -w packages/core run build && npm -w packages/cli run build && npm -w packages/web run build",
    "cli": "npm --workspace packages/cli run cli --",
    "web": "npm --workspace packages/web run dev",
    "lint": "npm run lint --workspaces"
  },
  "author": "Xavi Ortega",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "@types/node": "^25.0.3",
    "prettier": "3.7.4",
    "typescript": "^5.9.3"
  }
}
